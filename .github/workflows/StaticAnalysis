name: Static Analysis

on:
  pull_request:
  push:
  workflow_dispatch:

jobs:
  static-analysis:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v2

      - name: Static code analysis with Semgrep
        uses: returntocorp/semgrep-action@v1.5.0
          with:
          config: 'p/default'

      - name: Lint Dockerfile with Hadolint
        uses: hadolint/hadolint-action@v1.0.0
        with:
          files: Dockerfile
          
       - name: Super-Linter
       if: ${{ github.event_name == 'pull_request' }}
       uses: github/super-linter@v4
       with:
       config: 'p/default'
